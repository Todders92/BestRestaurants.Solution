@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Cuisine

<div class="well">
  <h2>Edit</h2>

  <h4>Edit this cuisine: @Html.DisplayFor(model => model.Type)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.CuisineId)

    @Html.LabelFor(model => model.Type)
    @Html.EditorFor(model => model.Type)

    <input type="submit" value="Save" />
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Back to cuisines", "Index")</p></center>
  </div>
</div>