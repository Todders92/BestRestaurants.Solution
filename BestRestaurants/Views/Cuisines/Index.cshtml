@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<div class="well">
  <h1>Cuisines</h1>

  @if (@Model.Count == 0)
  {
    <h3>No cuisines have been added yet!</h3>
  } 

  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Add new cuisine", "Create")</p></center>
  </div>
  <div class="fake-button well">
    <center><p class="link"><a href="/Restaurants/Create">Add a restaurant</a></p></center>
  </div>
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Home", "Index", "Home")</p></center>
  </div>
</div>