@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Cuisine

<div class="well">
  <h4>Add a new cuisine</h4>
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Type)
      @Html.TextBoxFor(model => model.Type)
    </div>
    <input type="submit" value="Add new cuisine" />
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Show all cuisines", "Index")</p></center>
  </div>
</div>