@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<div class="well">
  <h4>Add a new restaurant</h4>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.PriceRange)
    @Html.TextBoxFor(model => model.PriceRange)

    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Add new restaurant" class="btn btn-default" />
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Show all restaurants", "Index")</p></center>
  </div>
</div>