@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>

<h1>Restuarants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

<ul>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Type</li>
  }
</ul>

<div class="fake-button well">
  <center><p>@Html.ActionLink("Add new restaurant", "Create")</p></center>
</div>
<div class="fake-button well">
  <center><p>@Html.ActionLink("Home", "Index", "Home")</p></center>
</div>